{
  "singleQuote": true,
  "printWidth": 120,
  "ignorePatterns": [],
  "experimentalSortImports": {
    "newlinesBetween": false,
    "customGroups": [
      {
        "groupName": "spud",
        "elementNamePattern": ["@spud.gg/"]
      }
    ],
    "groups": [
      ["side-effect"],
      ["builtin"],
      ["external-type", "external"],
      ["spud"],
      ["internal-type", "internal"],
      ["parent-type", "parent"],
      ["sibling-type", "sibling"],
      ["index-type", "index"]
    ]
  },
  "experimentalTailwindcss": {
    "stylesheet": "./packages/styles/main.css",
    "attributes": ["class", "className"],
    "functions": ["clsx", "cn"],
    "preserveDuplicates": false,
    "preserveWhitespace": false
  }
}
